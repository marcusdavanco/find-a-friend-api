generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(uuid())
  email          String        @unique
  password_hash  String
  org            Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?

  @@map("users")
}

model Organization {
  id      String @id @default(uuid())
  name    String
  address String
  phone   String
  user    User[]
  pets    Pet[]

  @@map("organizations")
}

enum Species {
  DOG
  CAT
}

enum Size {
  PEQUENINO
  PEQUENO
  MEDIO
  GRANDE
  GIGANTE
}

enum Age {
  FILHOTE
  JOVEM
  ADULTO
  IDOSO
}

enum Independency {
  BAIXO
  MEDIO
  ALTO
}

model Pet {
  id           String       @id @default(uuid())
  name         String
  species      Species
  size         Size
  age          Age
  independency Independency
  description  String?
  city         String

  org            Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?
  available      Boolean       @default(true)

  @@map("pets")
}
