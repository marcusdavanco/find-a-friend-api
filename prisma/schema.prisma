generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(uuid())
  email          String        @unique
  password_hash  String
  org            Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?

  @@map("users")
}

model Organization {
  id      String @id @default(uuid())
  name    String
  address String
  phone   String
  user    User[]
  pets    Pet[]

  @@map("organizations")
}

enum Species {
  DOG
  CAT
}

enum Size {
  SMALL
  MEDIUM
  BIG
}

model Pet {
  id             String        @id @default(uuid())
  name           String
  weight         Decimal
  species        Species
  size           Size
  age            Int
  breed          String
  description    String?
  city           String
  org            Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?
  available      Boolean       @default(true)

  @@map("pets")
}
